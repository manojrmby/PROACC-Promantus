                $("#txtCustomerPhone").val(result.Phone);

                $("#txtCustomerEmail").val(result.Email);
                $("#btnCustomerUpdate").show();
                $("#btnCustomerCreate").hide();
                $("#h4addcustomer").hide();
                $("#h4UpdateCustomer").show();


            },
            error: function (err) {
                alert(err.responseText);
            }
        });
    });

