    function CompanyNameExists(CompanyName, id) {

            var status = true;
              $.ajax({
                url: '@Url.Action("CheckCustomersNameAvailability", "Admin")',
                //type: "GET",
                data: { namedata: CompanyName,id:id },
                dataType: "json",
